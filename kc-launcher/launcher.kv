#:kivy 1.7

<KlaatuLabel>:
    markup: True
    opacity: .5

<KlaatuImage>:
    allow_stretch: True
    keep_ratio: False

<KlaatuButton>:
    background_color: .37, .62, .63, .5
    markup: True

<LauncherScreen>:
    KlaatuImage:
        source: 'bg1.jpg'

    BoxLayout:
        size_hint: .5, None
        height: 250
        pos_hint: { 'center_x': .5 }
        orientation: 'vertical'

        KlaatuButton:
            text: '[size=28][b]Touchtracer[/b][/size]'
            on_release: app.run_touchtracer()

        KlaatuButton:
            text: '[size=28][b]Something[/b][/size]'
            on_release: root.manager.current = root.manager.next()
